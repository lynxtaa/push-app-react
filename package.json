{
  "name": "push-app-react",
  "version": "0.1.0",
  "description": "Pushups Scheduler",
  "main": "webpack.config.js",
  "author": "Alex Kondratyuk <lynxtaa@gmail.com>",
  "repository": "https://github.com/lynxtaa/push-app-react.git",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "compression": "^1.7.2",
    "cross-env": "^5.1.5",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "npm-run-all": "^4.1.3",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^4.1.3",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.0-beta.2",
    "babel-preset-react-app": "^4.0.0-next.b2fd8db8",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-react": "^7.8.2",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "http-proxy-middleware": "^0.18.0",
    "husky": "^0.15.0-rc.13",
    "idb-keyval": "^3.0.4",
    "koa-connect": "^2.0.1",
    "lint-staged": "^7.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.4",
    "offline-plugin": "^5.0.3",
    "prettier": "^1.12.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-serve": "^1.0.2"
  },
  "scripts": {
    "start": "npm-run-all -p server:dev hot-server",
    "build": "webpack --config config/webpack.config.prod.js --profile",
    "hot-server": "webpack-serve config/webpack.config.dev.js --port 8080 --no-reload",
    "lint": "eslint --ext .jsx,.js config controllers models src *.js",
    "serve": "npm run build && npm run server:prod",
    "server:dev": "cross-env NODE_ENV=development nodemon server.js",
    "server:prod": "cross-env NODE_ENV=production node server.js",
    "test": "mocha --reporter spec src/**/*.test.js",
    "posttest": "npm run -s lint"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
