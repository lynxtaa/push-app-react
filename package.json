{
  "name": "push-app-react",
  "version": "0.1.0",
  "description": "Pushups Scheduler",
  "main": "webpack.config.js",
  "author": "Alex Kondratyuk <lynxtaa@gmail.com>",
  "repository": "https://github.com/lynxtaa/push-app-react.git",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "compression": "^1.7.3",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.7.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-hot-loader": "^4.8.0",
    "react-router-dom": "^4.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-preset-react-app": "^7.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.1",
    "eslint": "^5.15.2",
    "eslint-config-prettier": "^4.1.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.5.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "http-proxy-middleware": "^0.19.1",
    "husky": "^1.3.1",
    "idb-keyval": "^3.1.0",
    "koa-connect": "^2.0.1",
    "mini-css-extract-plugin": "^0.4.5",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "offline-plugin": "^5.0.6",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-serve": "^2.0.3"
  },
  "scripts": {
    "start": "npm-run-all -p server:dev hot-server",
    "build": "webpack --config config/webpack.config.prod.js --profile",
    "hot-server": "webpack-serve config/webpack.config.dev.js --port 8080 --no-reload",
    "lint": "eslint --ext .jsx,.js config controllers models src *.js",
    "serve": "npm run build && npm run server:prod",
    "server:dev": "cross-env NODE_ENV=development nodemon server.js",
    "server:prod": "cross-env NODE_ENV=production node server.js",
    "test": "mocha --reporter spec src/**/*.test.js",
    "posttest": "npm run -s lint"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
